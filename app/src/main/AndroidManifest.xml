<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.mrocigno.moving">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Views.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Views.LoginActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".Views.MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".Views.DefaultActivity"
            android:label="@string/title_activity_default"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Views.CadastroActivity"
            android:label="Cadastro" />
        <activity
            android:name=".Views.AlterarSenhaActivity"
            android:label="Alterar senha" />
        <activity
            android:name=".Views.ListaActivity"
            android:label="Lista de usuÃ¡rios" />
    </application>

</manifest>